<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ComposeFragment">


    <EditText
        android:id="@+id/etDescription"
        android:layout_width="328dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivPostImage"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="42dp"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:hint="Add caption!"
        android:inputType="textPersonName"
        android:textSize="14sp" />

    <Button
        android:id="@+id/btnCaptureImage"
        android:layout_width="144dp"
        android:layout_height="20dp"
        android:layout_below="@+id/tvPublish"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="37dp"
        android:layout_marginTop="26dp"
        android:background="@drawable/rounded_corner_purple"
        android:text="take picture"
        android:textColor="#FFFFFF"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/ivPostImage"
        android:layout_width="304dp"
        android:layout_height="334dp"
        android:layout_below="@+id/btnCaptureImage"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="49dp"
        android:layout_marginTop="10dp"
        tools:srcCompat="@tools:sample/avatars" />

    <Button
        android:id="@+id/btnGalleryPicture"
        android:layout_width="166dp"
        android:layout_height="23dp"
        android:layout_below="@+id/tvPublish"
        android:layout_marginStart="37dp"
        android:layout_marginTop="26dp"
        android:layout_toEndOf="@+id/btnCaptureImage"
        android:background="@drawable/rounded_corner_purple"
        android:text="choose from gallery"
        android:textColor="#FFFFFF"
        android:textSize="12sp" />

    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="168dp"
        android:layout_height="34dp"
        android:layout_below="@+id/etDescription"
        android:layout_alignParentStart="true"
        android:layout_marginStart="127dp"
        android:layout_marginTop="29dp"
        android:background="@drawable/rounded_corner_black"
        android:text="submit"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/tvPublish"
        android:layout_width="264dp"
        android:layout_height="29dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="73dp"
        android:layout_marginTop="68dp"
        android:text="Publish to COLLAB"
        android:textAlignment="center"
        android:textColor="#1C1818" />

</RelativeLayout>