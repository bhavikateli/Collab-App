<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity">

    <EditText
        android:id="@+id/etUsernameSignUp"
        android:layout_width="310dp"
        android:layout_height="30dp"
        android:layout_below="@+id/imageView3"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="27dp"
        android:layout_marginTop="62dp"
        android:background="@drawable/rounded_corner_lightgray"
        android:ems="10"
        android:hint="    create username"
        android:inputType="textPersonName"
        android:textSize="14sp"
        tools:layout_editor_absoluteX="60dp"
        tools:layout_editor_absoluteY="82dp" />

    <EditText
        android:id="@+id/etPasswordSignUp"
        android:layout_width="309dp"
        android:layout_height="31dp"
        android:layout_below="@+id/etUsernameSignUp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="34dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_corner_lightgray"
        android:ems="10"
        android:hint="    create password"
        android:inputType="textPersonName"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/etPasswordSignUp2"
        android:layout_width="309dp"
        android:layout_height="31dp"
        android:layout_below="@+id/etPasswordSignUp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="34dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/rounded_corner_lightgray"
        android:ems="10"
        android:hint="     enter email"
        android:inputType="textPersonName"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/etPasswordSignUp3"
        android:layout_width="309dp"
        android:layout_height="31dp"
        android:layout_below="@+id/etPasswordSignUp2"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="34dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_corner_lightgray"
        android:ems="10"
        android:hint="    confirm email"
        android:inputType="textPersonName"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/etProfileDescriptionSignUp"
        android:layout_width="307dp"
        android:layout_height="65dp"
        android:layout_below="@+id/etPasswordSignUp3"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_corner_lightgray"
        android:ems="10"
        android:gravity="start|top"
        android:hint="     enter profile description"
        android:inputType="textMultiLine"
        android:textSize="14sp" />

    <Button
        android:id="@+id/btnCaptureImageSignUp"
        android:layout_width="163dp"
        android:layout_height="28dp"
        android:layout_below="@+id/etProfileDescriptionSignUp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="37dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_corner_black"
        android:text="take profile picture"
        android:textColor="#FFFFFF"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/ivProfilePreviewSignUp"
        android:layout_width="109dp"
        android:layout_height="90dp"
        android:layout_below="@+id/btnCaptureImageSignUp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp"
        tools:srcCompat="@tools:sample/avatars"
        android:background="@drawable/border"/>

    <Button
        android:id="@+id/btnGalleryPictureSignUp"
        android:layout_width="153dp"
        android:layout_height="28dp"
        android:layout_below="@+id/etProfileDescriptionSignUp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@+id/btnCaptureImageSignUp"
        android:background="@drawable/rounded_corner_black"
        android:text="choose from gallery"
        android:textColor="#FFFFFF"
        android:textSize="12sp" />

    <Button
        android:id="@+id/btnSubmitSignUp"
        android:layout_width="141dp"
        android:layout_height="30dp"
        android:layout_below="@+id/ivProfilePreviewSignUp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="144dp"
        android:layout_marginTop="106dp"
        android:background="@drawable/rounded_corner_purple"
        android:text="submit"
        android:textColor="#FFFFFF" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="168dp"
        android:layout_height="51dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="121dp"
        android:layout_marginTop="14dp"
        app:srcCompat="@drawable/collab"
        />
</RelativeLayout>