<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity">

    <EditText
        android:id="@+id/etUsernameSignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="27dp"
        android:layout_marginTop="84dp"
        android:layout_toEndOf="@+id/tvUsernameSignUp"
        android:ems="10"
        android:hint="enter username"
        android:inputType="textPersonName"
        android:textSize="14sp"
        tools:layout_editor_absoluteX="60dp"
        tools:layout_editor_absoluteY="82dp" />

    <EditText
        android:id="@+id/etPasswordSignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etUsernameSignUp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@+id/tvPasswordSignUp"
        android:ems="10"
        android:hint="enter password"
        android:inputType="textPersonName"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/etProfileDescriptionSignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etPasswordSignUp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="7dp"
        android:layout_toEndOf="@+id/tvProfileDescriptionSignUp"
        android:ems="10"
        android:gravity="start|top"
        android:hint="enter profile description"
        android:inputType="textMultiLine"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tvUsernameSignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="44dp"
        android:layout_marginTop="90dp"
        android:text="Username:"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvPasswordSignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvUsernameSignUp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="44dp"
        android:layout_marginTop="43dp"
        android:text="Password"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvProfileDescriptionSignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvPasswordSignUp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="44dp"
        android:layout_marginTop="23dp"
        android:text="Profile Description"
        android:textSize="16sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnCaptureImageSignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvProfileDescriptionSignUp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="99dp"
        android:layout_marginTop="22dp"
        android:text="take profile picture" />

    <ImageView
        android:id="@+id/ivProfilePreviewSignUp"
        android:layout_width="109dp"
        android:layout_height="90dp"
        android:layout_below="@+id/btnCaptureImageSignUp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="123dp"
        android:layout_marginTop="42dp"
        tools:srcCompat="@tools:sample/avatars" />

    <Button
        android:id="@+id/btnGalleryPictureSignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivProfilePreviewSignUp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="95dp"
        android:layout_marginTop="19dp"
        android:text="choose from gallery" />

    <Button
        android:id="@+id/btnSubmitSignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnGalleryPictureSignUp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="144dp"
        android:layout_marginTop="28dp"
        android:text="submit" />
</RelativeLayout>